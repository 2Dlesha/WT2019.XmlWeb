<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
   
    <servlet>
      <servlet-name>PageMain</servlet-name>
      <jsp-file>/WEB-INF/jsp/main.jsp</jsp-file>
   </servlet>

    <servlet-mapping>
        <servlet-name>PageMain</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>



    <servlet>
      <servlet-name>PageUsers</servlet-name>
      <jsp-file>/WEB-INF/jsp/users.jsp</jsp-file>
   </servlet>

    <servlet-mapping>
        <servlet-name>PageUsers</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>UserController</servlet-name>
      <servlet-class>stud.oiv.migration.controller.UserServlet</servlet-class>
   </servlet>
    
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/ShowUsers</url-pattern>
  </servlet-mapping>
   


  
    <servlet>
      <servlet-name>PageLibrarians</servlet-name>
      <jsp-file>/WEB-INF/jsp/librarians.jsp</jsp-file>
   </servlet>

    <servlet-mapping>
        <servlet-name>PageLibrarians</servlet-name>
        <url-pattern>/librarians</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>LibrarianController</servlet-name>
      <servlet-class>stud.oiv.migration.controller.LibrarianServlet</servlet-class>
   </servlet>
    
  <servlet-mapping>
    <servlet-name>LibrarianController</servlet-name>
    <url-pattern>/ShowLibrarians</url-pattern>
  </servlet-mapping>




      <servlet>
      <servlet-name>BookController</servlet-name>
      <servlet-class>stud.oiv.migration.controller.BookServlet</servlet-class>
   </servlet>
    
  <servlet-mapping>
    <servlet-name>BookController</servlet-name>
    <url-pattern>/ShowBooks</url-pattern>
  </servlet-mapping>
   
</web-app>